<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.autowp.canreader.RadioTuneFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.sccomponents.gauges.ScLinearGauge
        android:id="@+id/tune"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/radio_tune"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="20px"
        android:paddingTop="20dp"
        sc:notches="50"
        sc:notchesColor="@color/blue"
        sc:notchesSize="1dp"
        sc:pointerColor="@color/blue"
        sc:pointerRadius="5dp"
        sc:strokeColor="@color/blue"
        sc:strokeSize="1dp"
        sc:textAlign="left"
        sc:textColor="@android:color/background_light"
        sc:textPosition="outside"
        sc:textTokens="86"
        sc:textUnbend="true" />

</FrameLayout>
