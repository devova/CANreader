<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.autowp.canreader.RadioActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audio_icon"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/radioFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/alert_dark_frame"
        android:fontFamily="monospace"
        android:paddingLeft="90dp"
        android:paddingRight="20dp"
        android:text="107.2 MHz"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/radioMem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="496dp"
        android:layout_marginStart="8dp"
        android:fontFamily="monospace"
        android:text="MEM 1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/radioFrequency"
        app:layout_constraintEnd_toEndOf="@+id/radioFrequency"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintRight_toRightOf="@+id/radioFrequency"
        app:layout_constraintStart_toStartOf="@+id/radioFrequency" />

</android.support.constraint.ConstraintLayout>
