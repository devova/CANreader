<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:longClickable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listitem_monitor_id"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:gravity="center_vertical|start"
        android:longClickable="true"
        android:text="FFFFFFFF"
        android:textSize="18sp"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/listitem_monitor_rtr_line"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listitem_monitor_rtr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:longClickable="true"
                    android:text="RTR"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/listitem_monitor_dlc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:longClickable="true"
                    android:paddingEnd="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingStart="4dp"
                    android:text="8"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listitem_monitor_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:gravity="center"
                android:longClickable="true"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/listitem_transmit_data0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:longClickable="true"
                    android:text="FF"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/listitem_transmit_data1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:longClickable="true"
                    android:text="FF"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/listitem_transmit_data2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:longClickable="true"
                    android:text="FF"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/listitem_transmit_data3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:longClickable="true"
                    android:text="FF"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/listitem_transmit_data4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:longClickable="true"
                    android:text="FF"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/listitem_transmit_data5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:longClickable="true"
                    android:text="FF"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/listitem_transmit_data6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:longClickable="true"
                    android:text="FF"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/listitem_transmit_data7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:longClickable="true"
                    android:text="FF"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:elevation="24dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/listitem_monitor_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:longClickable="true"
                    android:text="999ms" />

                <TextView
                    android:id="@+id/listitem_monitor_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:longClickable="true"
                    android:text="999" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/listitem_monitor_signals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Signals"
            tools:text="@android:string/VideoView_error_text_invalid_progressive_playback" />

    </LinearLayout>

</LinearLayout>